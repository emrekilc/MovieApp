    <link rel="shortcut icon" type="image/png" href="images/header/favicon.ico" /> *@

    <script src="~/ckeditor/ckeditor.js"></script>
    <style>
        body {
            background-color: #f8f9fa;
        }

        .navbar-custom {
            background-color: #343a40;
        }

            .navbar-custom .navbar-brand,
            .navbar-custom .navbar-nav .nav-link {
                color: #fff;
            }

        .container-custom {
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            border-radius: 8px;
            padding: 20px;
        }

        .footer-custom {
            background-color: #343a40;
            color: #fff;
            padding: 10px 0;
            text-align: center;
            margin-top: 20px;
        }

        .header-custom {
            text-align: center;
            margin-bottom: 20px;
        }

        .menu-custom {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    @await Html.PartialAsync("_navbar")

    <header class="header-custom">
        @RenderSection("header", false)
    </header>

    <div class="container mt-3">
        @if (IsSectionDefined("menu"))
        {
            <div class="row">
                <div class="col-md-3 menu-custom">
                    @RenderSection("menu", false)
                </div>
                <div class="col-md-9 container-custom">
                    @RenderBody()
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-md-12 container-custom">
                    @RenderBody()
                </div>
            </div>
        }
    </div>

    @if (IsSectionDefined("message"))
    {
        <div class="container mt-3">
            @RenderSection("message", false)
        </div>
    }
    @* @RenderBody() *@
    <footer class="footer-custom">
        <p>&copy; @DateTime.Now.Year - Movie App by Emre Kılıç</p>
    </footer>

    <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    <script src="https://cdn.ckeditor.com/4.16.0-lts/standard/ckeditor.js"></script>
    @RenderSection("scripts", false)

