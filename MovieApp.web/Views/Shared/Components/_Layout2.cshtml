
    @await Html.PartialAsync("_navbar")

    <header class="header-custom">
        @RenderSection("header", false)
    </header>

    <div class="container mt-3">
        @if (IsSectionDefined("menu"))
        {
            <div class="row">
                <div class="col-md-3 menu-custom">
                    @RenderSection("menu", false)
                </div>
                <div class="col-md-9 container-custom">
                    @RenderBody()
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-md-12 container-custom">
                    @RenderBody()
                </div>
            </div>
        }
    </div>

    @if (IsSectionDefined("message"))
    {
        <div class="container mt-3">
            @RenderSection("message", false)
        </div>
    }
    @* @RenderBody() *@
    <footer class="footer-custom">
        <p>&copy; @DateTime.Now.Year - Movie App by Emre Kılıç</p>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    <script src="https://cdn.ckeditor.com/4.16.0-lts/standard/ckeditor.js"></script>
    @RenderSection("scripts", false)
