@model MovieApp.web.Entity.Movie

<div class="card mb-3 shadow-sm">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img src="/img/@Model.ImageUrl" class="card-img" alt="@Model.Title">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text">@Html.Raw(Model.Description)</p>
                <div>
                    <a class="btn btn-primary btn-sm mr-2" asp-controller="Movies" asp-action="Details" asp-route-id="@Model.MovieId">
                        <i class="fas fa-info-circle"></i> Details
                    </a>
                    <button class="btn btn-success btn-sm mr-2" onclick="markAsWatched(@Model.MovieId)">
                        <i class="fas fa-check-circle"></i> İzledim
                    </button>
                    <button class="btn btn-warning btn-sm" onclick="markAsWatchLater(@Model.MovieId)">
                        <i class="fas fa-clock"></i> Daha Sonra İzle
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha384-iKb9e1TLz8nx0Vam+K63K8EKdPSluI4a7B0M5R7yG2zGZ5Ob9xiBPj8WW4XKxIZ2" crossorigin="anonymous">



