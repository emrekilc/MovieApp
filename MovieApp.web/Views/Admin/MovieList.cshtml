@model AdminMoviesViewModel

<h1 class="my-4 text-center">Admin Movie List</h1>
<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered align-middle">
        <thead class="table-dark">
            <tr class="text-center">
                <th scope="col">#</th>
                <th scope="col">Image</th>
                <th scope="col">Title</th>
                <th scope="col">Genres</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model.Movies)
            {
                <tr class="text-center">
                    <td>@movie.MovieId</td>
                    <td><img src="~/img/@movie.ImageUrl" class="img-thumbnail" width="80" /></td>
                    <td>@movie.Title</td>
                    <td>
                        <ul>
                            @foreach (var genre in movie.Genres)
                            {
                                <li>@genre.Name</li>
                            }
                        </ul>
                    </td>
                    <td>
                        <a href="/admin/movieupdate/@movie.MovieId" class="btn btn-primary btn-sm mx-1">Update</a>
                        <form action="/admin/moviedelete" method="post" style="display:inline;">
                            <input type="hidden" name="MovieId" value="@movie.MovieId" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .img-thumbnail {
        border-radius: 10px;
    }
</style>
